#include<stdio.h>
int caculate(int num0)
{
	int num1 = 0, sum = 0;
	num1 = num0;
	while (num1 > 0) {
		sum = num1 * sum;
		num1--;
	}
	return sum;
}
int main()
{
	int choice=0;
	printf("是否进行阶乘运算（输入1代表是，输入0代表否)\n");
	if (choice = 1)
	{int num = 0, a = 1;
	int anser = 0;
	printf("请输入运算阶乘的正整数\n");
	scanf_s("%d", &num);
	anser = caculate(num);
	printf("%d", anser);
	}
	else {
		return 0;

	}

	return 0;


	}



